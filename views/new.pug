extends layout

block content
  form(method="post", action="/pictures",  enctype="multipart/form-data").my-3
    input(type="hidden" name="_csrf" value!=csrfToken)
    div.form-group
      label(for="pictureTitle") タイトル
      input(type="text" name="pictureTitle")#pictureTitle.form-control
    div
      h5 画像
      input(type="file", name="photo", accept="image/jpg")#pictureTitle.form-control
    div.form-group
      label(for="statement") ステートメント
      textarea(name="statement")#statement.form-control
    button(type="submit").btn.btn-info 投稿